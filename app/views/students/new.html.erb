<h1>Student Form</h1>

<ul>
    <% @student.errors.full_messages.each do |error| %>
        <li style="color: red;"><%= error %></li>
    <% end %>
</ul>

<%= form_for(@student) do |f| %>
  <label>First Name</label><br>
  <%= f.text_field :first_name %><br><br>

  <label>Last Name</label><br>
  <%= f.text_field :last_name %><br><br>

  <%= f.submit %>
<% end %>

