<h1><%= @header_msg %></h1>

<ul>
	<% @student.errors.full_messages.each do |error| %>
		<li style="color: red;"><%= error %></li>
	<% end %>
</ul>

<%= form_for(@student) do |f| %>
  <label>First name</label><br>
  <%= f.text_field :first_name %><br><br>

  <label>Last name</label><br>
  <%= f.text_field :last_name %><br><br>

  <%= f.submit @button_msg%>
<% end %>